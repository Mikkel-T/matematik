{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "rules": {
    "semi": ["warn", "always"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "no-console": ["warn"],
    "@typescript-eslint/no-unused-vars": ["error"]
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "next"
  ],
  "plugins": ["@typescript-eslint"]
}
